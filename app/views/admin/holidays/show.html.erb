 
<%=
  present :elegant do |p|
    p.header do |r|
      r.field 'Name', @resource.name
    end
    p.body do |r|
      r.field 'Description', @resource.description
      r.field 'Day', @resource.day
      r.field 'Checked', @resource.checked
      r.field 'Created at', @resource.created_at
      r.field 'Updated at', @resource.updated_at
    end
    p.actions do |r|
#      r.text link_to('manage some nested resource', path_to_some_resource_path(@resource))
      r.text edit_action
      r.text destroy_action
      r.text back_action
    end
  end
%>
